<h2>Pending requests</h2>
<% @pending_friends.each do |friend| %>
 <ul>
	<li><%= friend.name  %></li>
 	<li><%= link_to 'Accept', new_friendship_path, method: :patch %></li>
 	<li><%= link_to 'Decline', friendships_path %></li>
 </ul>
<% end %>
<h2>Your requests</h2>
<% @friend_requests.each do |friend| %>
 <ul> 
	<li><%= friend.name  %></li>
 	<li><%= link_to 'Cancel', friendships_path %></li>
 </ul>
<% end %>
