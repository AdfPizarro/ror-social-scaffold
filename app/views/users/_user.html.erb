<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
    <% if !current_user.available_request?(user.id)&& current_user.id!=user.id %>
          
     <%= link_to 'Send friend request',  user_friendships_path(user), method: :post %>
    <% end %>
    <% if current_user.has_a_request(user.id) %>
        <%= link_to 'Accept', friendship_path(user), method: :patch %>
        <%= link_to 'Reject', friendship_path(user.id), method: :delete %>
    <% end %>
  </span>
</li>
