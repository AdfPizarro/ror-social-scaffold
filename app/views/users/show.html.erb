<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if !@amI %>
   <%= link_to 'Send friend request',  user_friendships_path(@user), method: :post, class: 'profile-link' %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
